<view>
	<view id='selector'>
		<view bind:tap='showCal'>{{year}}年{{month}}月{{day}}日
			<image src="../../images/icon/down.png" style='height: 30rpx; width: 30rpx' animation='{{animationData}}'/></view>		
    <view bind:tap='showSel'>分类
			<image src="../../images/icon/down.png" style='height: 30rpx; width: 30rpx' animation='{{animationData3}}'/></view>
	</view>
  <view id='cal' animation='{{animationData2}}' style='position: absolute; top: -600px;' >
		<view>
			<view class='date-show'>
				<view class='lt-arrow' bindtap='lastMonth'><van-icon name="arrow"/></view>
				{{year}}年{{month}}月
				<view class='rt-arrow' bindtap='nextMonth'><van-icon name="arrow"/></view>
			</view>
		</view>
		<view class='header'>
			<view wx:for='{{date}}' class='{{(index == todayIndex) && isTodayWeek ? "weekMark" : ""}}'>{{item}}</view>
		</view>
		<view class='date-box'>
			<view wx:for='{{dateArr}}' class='{{isToday == item.isToday ? "nowDay" : ""}}' data-date='{{item.isToday}}'>			
				<view class='date-head'>
					<view bind:tap='selectDay' data-text='{{item.dateNum}}'>{{item.dateNum}}</view>
				</view>
			</view>
		</view>
	</view>
	<view animation='{{animationData4}}' style='position: absolute; top: -600px;'>helloworld</view>

</view>
